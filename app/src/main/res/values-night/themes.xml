<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.EduFlow" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.EduFlow" parent="Base.Theme.EduFlow" />

    <style name="GlassCard" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">28dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="android:background">@drawable/card_border_modern</item>
        <item name="android:foreground">@drawable/card_glow_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="DashboardCardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ProfileLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#8A000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProfileEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:enabled">false</item>
    </style>

</resources>