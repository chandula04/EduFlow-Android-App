<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.EduFlow" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.EduFlow" parent="Base.Theme.EduFlow" />

    <style name="GlassCard" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">28dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="android:background">@drawable/card_border_modern</item>
        <item name="android:foreground">@drawable/card_glow_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="DashboardCardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ProfileLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#B3FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProfileValue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ProfileTextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColorHint">#B3FFFFFF</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/white</item>
    </style>

    <style name="ProfileEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:enabled">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ProfileEditIcon" parent=""> <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_edit</item>
        <item name="android:padding">8dp</item>
        <item name="tint">#B3FFFFFF</item>
    </style>

    <style name="ProfileRadioButton" parent="Widget.Material3.CompoundButton.RadioButton"> <item name="android:textColor">@color/white</item>
        <item name="buttonTint">@color/white</item>
        <item name="android:enabled">false</item>
    </style>

</resources>